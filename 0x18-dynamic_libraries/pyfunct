#include "main.h"

/**
 * add - adds two intigers
 * @a: first integer
 * @b: second integer
 *
 * Return: result of added integers
*/
int add(int a, int b)
{
	return (a + b);
}

/**
 * sub - subtracts intigers b from a
 * @a: first integer
 * @b: second integer
 *
 * Return: result of a - b
*/
int sub(int a, int b)
{
	return (a - b);
}

/**
 * mul - multiplies two intigers
 * @a: first integer
 * @b: second integer
 *
 * Return: result of the integers operation
*/
int mul(int a, int b)
{
	return (a * b);
}

/**
 * div - divides a by b
 * @a: first integer
 * @b: second integer
 *
 * Return: result of divition of both integers
*/
int div(int a, int b)
{
	return (a / b);
}

/**
 * mod - returns the remainder of two intigers
 * @a: first integer
 * @b: second integer
 *
 * Return: remainder of integers a and b
*/
int mod(int a, int b)
{
	return (a % b);
}
